    <script>
      $(document).ready(() => {
        $(".toast")
          .toast({ delay: 3000 })
          .toast('show')
          .on('shown.bs.toast', () => {
            // Clear any notices. Use replaceState because updating the query
            // param causes page reload
            window.history.replaceState({}, '', window.location.origin);
          });
      });
    </script>
  </body>
